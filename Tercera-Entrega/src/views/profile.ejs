<!DOCTYPE html>
<html lang="en">

<head>
    <%- include(`./partials/head`) %>
</head>

<body>

    <header>
        <%- include('./partials/headerLog', {current: `#`}) %>
    </header>

    <div class="jumbotron">
        <main>
            <div class="jumbotron">
                <h1 class="display-4">Perfil de usuario</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Email</th>
                            <th scope="col">Teléfono</th>
                            <th scope="col">Dirección</th>
                            <th scope="col">Foto</th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td >
                                    <%= userLog.username %>
                                </td>
                                <td>
                                    <%= userLog.email %>
                                </td>
                                <td>
                                    <%= userLog.telefono %>
                                </td>
                                <td>
                                    <%= userLog.direccion %>
                                </td>
                                <td>
                                    <img src="/avatar/<%= userLog.foto %>"width="60" height="60">
                                </td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

</body>

</html>